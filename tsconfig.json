{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,

    "sourceMap": true,
    "pretty": true,

    "outDir": "build/",
    "baseUrl": "src/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
